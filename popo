<body>
    <div id="message">ти пидорас</div>
    <script>
        const colors = ['#FF5733', '#33FF57', '#3357FF', '#FF33A1', '#F3FF33'];
        let currentIndex = 0;

        function changeColor() {
            document.body.style.backgroundColor = colors[currentIndex];
            currentIndex = (currentIndex + 1) % colors.length;
        }

        setInterval(changeColor, 500); // Зміна кольору кожні 0.5 секунди

        setTimeout(() => {
            window.location.href = 'https://example.com'; // Замініть URL на потрібний вам сайт
        }, 5000); // Перенаправлення через 5 секунд
    </script>
</body>
